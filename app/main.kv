#:kivy 1.0.9
<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            Button:
                id: 'update_button'
                text: 'Update'
                on_press: root.manager.current = 'update'
        Label:
            text: 'Templateでテンプレートファイルをダウンロードできます。\nUpdateでファイルを選択できます。\n※注意※ Updateすると前回のデータは削除されます。\nTestで確認できます。\nMemorizeは記憶するためのモードです。'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: 'Test_button'
                text: 'Test'
                on_press: root.manager.current = 'test'
            Button:
                id: 'memorization_button'
                text: 'Memorization '
                on_press: root.manager.current = 'memorize'

<TemplateScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            Button:
                id: 'update_button'
                text: 'Update'
                on_press: root.manager.current = 'update'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: 'csv'
                    text: 'csv'
                CheckBox:
                    id: 'csv'
                    group: 'radio'
                    active: root.check
                    on_press: root.on_checkbox_press('csv')
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: 'excel'
                    text: 'excel'
                CheckBox:
                    id: 'excel'
                    group: 'radio'
                    on_press: root.on_checkbox_press('excel')
        Button:
            size_hint_y: 0.2
            id: 'download_button'
            text: 'Download'
            on_press: root.download_file()

<UpdateScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            Button:
                id: 'update_button'
                text: 'Update'
                on_press: root.manager.current = 'update'
        BoxLayout:
            orientation: 'vertical'
            FileChooserListView:
                size_hint_y: 0.5
                id: filechooser
                path: '/Users'
                color: '#242424'
            Label:
                size_hint_y: 0.1
                text: root.status
        Button:
            size_hint_y: 0.2
            id: "button_register"
            text: "register"
            on_press:
                root.load_english_word_file(filechooser.selection)

<TestScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            Button:
                id: 'update_button'
                text: 'Update'
                on_press: root.manager.current = 'update'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.english
                font_size: '50'
            Label:
                text: root.japanese
                font_size: '50'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                text: root.button_text
                on_press: root.on_press_button()

<MemorizeScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            Button:
                id: 'update_button'
                text: 'Update'
                on_press: root.manager.current = 'update'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.english
                font_size: '50'
            Label:
                text: root.japanese
                font_size: '50'
        Button:
            size_hint_y: 0.2
            text: 'next'
            on_press: root.on_press_button()

<ErrorPopupScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.8
            text: root.msg
        Button:
            text: 'OK'
            on_press: root.close_popup()