#:kivy 1.0.9
<ScreenLayout@BoxLayout>:
    orientation: 'vertical'

<WordsLabel@Label>:
    font_size: 40

<ButtonLayout@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: 0.2

<MainScreen>:
    ScreenLayout:
        ButtonLayout:
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            # Button:
            #     id: 'update_button'
            #     text: 'Update'
            #     on_press: root.manager.current = 'update'
        Label:
            text: 'Templateでテンプレートファイルをダウンロードできます。'
        ButtonLayout:
            Button:
                id: 'Test_button'
                text: 'Test'
                on_press: root.manager.current = 'test'
            Button:
                id: 'memorization_button'
                text: 'Memorization '
                on_press: root.manager.current = 'memorize'

<TemplateScreen>:
    ScreenLayout:
        ButtonLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            # Button:
            #     id: 'update_button'
            #     text: 'Update'
            #     on_press: root.manager.current = 'update'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: 'csv'
                    text: 'csv'
                CheckBox:
                    id: 'csv'
                    group: 'radio'
                    active: root.check
                    on_press: root.on_checkbox_press('csv')
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: 'excel'
                    text: 'excel'
                CheckBox:
                    id: 'excel'
                    group: 'radio'
                    on_press: root.on_checkbox_press('excel')
        ButtonLayout:
            Button:
                id: 'download_button'
                text: 'Download'
                on_press: root.download_file()

