<TestScreen>:
    ScreenLayout:
        ButtonLayout:
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            # Button:
            #     id: 'update_button'
            #     text: 'Update'
            #     on_press: root.manager.current = 'update'
        BoxLayout:
            orientation: 'vertical'
            WordsLabel:
                text: root.english
            WordsLabel:
                text: root.japanese
        ButtonLayout:
            Button:
                text: root.button_text
                on_press: root.on_press_button()

<MemorizeScreen>:
    ScreenLayout:
        ButtonLayout:
            Button:
                id: 'home_button'
                text: "Home"
                on_press: root.manager.current = 'main'
            Button:
                id: 'template_button'
                text: 'Template'
                on_press: root.manager.current = 'template'
            # Button:
            #     id: 'update_button'
            #     text: 'Update'
            #     on_press: root.manager.current = 'update'
        BoxLayout:
            orientation: 'vertical'
            WordsLabel:
                text: root.english
            WordsLabel:
                text: root.japanese
        ButtonLayout:
            Button:
                text: root.button_text
                on_press: root.on_press_button()

<ErrorPopupScreen>:
    ScreenLayout:
        Label:
            size_hint_y: 0.8
            text: root.msg
        Button:
            text: 'OK'
            on_press: root.close_popup()